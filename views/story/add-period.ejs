<link rel="stylesheet" href="/css/story.css">

<%- contentFor('body') %>
<div class="story_content">
    <h2>Select your story's time period</h2>

    <div class="grid story_select">
        <% for (period of periods) { %>
            <div class="card card-linked">
               <header class="card__header">
                    <h2 class="story_type_name"><a href="/story/<%= story._id %>/period/<%= period._id %>" class="main-link clickable"><%= period.name %></a></h2>
                </header>
                <div class="card__image story_select_img">
                    <img src="<%= period.imageURL %>" alt="<%= period.caption %>">
                </div>
                <div class="card__content">
                    <p class="story_description"><%= period.description %></p>
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="/js/main.js"></script>
