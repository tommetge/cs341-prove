<link rel="stylesheet" href="/css/cart.css">

<%- contentFor('body') %>
  <main class="cart">
    <% if (orders.length == 0) { %>

    <h1>No Orders!</h1>

    <% } else { %>

        <% for (order of orders) { %>
            <div class="order">
                <h2>Order <%= order.created_at %>:</h2>

                <ul>
                <% for (product of order.products) { %>
                  <li>
                    <div class="cart_image">
                      <a href="/product/<%= product.product._id %>">
                        <img src="<%= product.product.imageURL %>">
                      </a>
                    </div>

                    <div class="cart_item_detail">
                      <h3><%= product.product.title %></h3>
                      <div class="cart_item_amount">
                        <div class="cart_item_qty">
                          <div class="cart_item_qty_value"><span><%= product.qty %></span></div>
                        </div>
                        <div class="cart_item_price">
                          <span>$<%= (product.product.price * product.qty).toFixed(2) %></span>
                        </div>
                      </div>
                    </div>
                  </li>
                <% } %>
                </ul>

                <div class="checkout">
                    <div class="cart_total">
                        <h2>$<%= order.total.toFixed(2) %></h2>
                    </div>
                </div>
            </div>
        <% } %>

    <% } %>
  </main>