<%
    function mainLink() {
        var url = '/' + link_prefix + '/' + story._id + '/' + item_type;
        if (typeof direct_link !== 'undefined') {
            url = url + '/' + item._id;
        }
        if (typeof back_link !== 'undefined') {
            url = url + '?ref=' + back_link;
        }
        return '<a href="' + url + '" class="main-link clickable">' + item.name + '</a>';
    }
%>

<div class="card card-linked">
    <header class="card__header">
        <h2 class="story_type_name"><%- mainLink() %></h2>
    </header>
    <div class="card__image story_select_img">
        <img src="<%= item.imageURL %>" alt="<%= item.caption %>">
    </div>
    <div class="card__content">
        <p class="story_description"><%= item.description %></p>
    </div>
</div>
